\RequirePackage{ifthen}

% --------------------------------------------------------
% Language detection
% --------------------------------------------------------

\newif\ifspanish
\def\spanishfalse{\global\let\ifspanish\iffalse}
\def\spanishtrue{\global\let\ifspanish\iftrue}

% Default language is English
\spanishfalse

% Check for Spanish language
\@ifpackagewith{babel}{spanish}
  {\spanishtrue}
  {\spanishfalse}

% --------------------------------------------------------
% Multilingual environments
% --------------------------------------------------------

% Redefine tauenvname to support multiple languages
\renewcommand{\tauenvname}[1]{%
    \ifspanish
        \ifthenelse{\equal{#1}{Note}}{\textbf{Nota}}{%
        \ifthenelse{\equal{#1}{Information}}{\textbf{Informaci√≥n}}{\textbf{#1}}%
        }%
    \else
        \textbf{#1}%
    \fi
}

% Redefine keywordname to support multiple languages
\renewcommand\keywordname{%
    \ifspanish
        \textbf{Palabras clave}%
    \else
        \textbf{Keywords}%
    \fi
}

\endinput